{
    "elements":
            [
				{
                    "name": "ValueCIP",
                    "type": "ValidationTextBox",
                    "caption": "Controller-IP"
                },
                {
                    "name": "ValueCPort",
                    "type": "NumberSpinner",
                    "caption": "Controller-Port"
                },
                {
                    "name": "ValueGroup",
                    "type": "NumberSpinner",
                    "caption": "Group"
				}
            ],
    "actions":
            [
                {
                    "name": "ValueR",
                    "type": "NumberSpinner",
                    "caption": "R"
                },
                {
                    "name": "ValueG",
                    "type": "NumberSpinner",
                    "caption": "G"
                },
                {
                    "name": "ValueB",
                    "type": "NumberSpinner",
                    "caption": "B"
                },
                {
                    "name": "ValueW",
                    "type": "NumberSpinner",
                    "caption": "W"
